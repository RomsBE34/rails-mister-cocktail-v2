


<h2>  <%= @cocktail.name %> </h2>

<p> <% @cocktail.doses.each do |dose| %></p>
<%= dose.ingredient.name %>  <%= dose.description %>  <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Confirm delete ?" } %>
<% end %>

<form class="container">
   <h3 class="login-title">Add ingredients</h3>
    <div class="cocktail-form">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit class: "btn-medium" %>
      <% end %>
    </div>
</form>

